<Background::Box as |box|>


  <h1 class='font-bold text-2xl'>ประกาศ</h1>
  {{#if this.auth.is_auth}}
    <LinkTo @route='blogs.new'>
      <Button @icon='plus' class='mt-5'>สร้างประกาศ</Button>
    </LinkTo>
  {{/if}}
  <br>
  {{#each this.model as |blog|}}
    <div class='hover:bg-grey py-5 {{box.fill_class}}'>
      <LinkTo @route="blogs.show" @model={{blog}}>
        <h1 class="font-bold text-lg">{{blog.title}}</h1>
        <p>{{dayjs blog.created fn="fromNow"}}</p>
      </LinkTo>
    </div>
  {{/each}}

</Background::Box>