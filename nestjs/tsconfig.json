{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "paths": {
      "@esc/sso": ["libs/sso/src"],
      "@esc/sso/*": ["libs/sso/src/*"],
      "@esc/englibrary": ["libs/englibrary/src"],
      "@esc/englibrary/*": ["libs/englibrary/src/*"],
      "@esc/rethinkdb-repository": ["libs/rethinkdb-repository/src"],
      "@esc/rethinkdb-repository/*": ["libs/rethinkdb-repository/src/*"]
    }
  },
  "exclude": ["node_modules", "dist"]
}
