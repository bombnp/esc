{
  "compilerOptions": {
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowJs": true,
    "module": "commonjs",
    "target": "es2017",
    "lib": [
      "es2017",
      "dom"
    ],
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "paths": {
      "@esc/sso":          ["libs/sso/src"],
      "@esc/sso/*":        ["libs/sso/src/*"],
      "@esc/englibrary":   ["libs/englibrary/src"],
      "@esc/englibrary/*": ["libs/englibrary/src/*"],
      "@esc/repository":   ["libs/repository/src"],
      "@esc/repository/*": ["libs/repository/src/*"]
    }
  },
  "exclude": ["node_modules", "dist"]
}
